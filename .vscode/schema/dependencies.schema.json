{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "type": "object",
    "patternProperties": {
        ".*": {
            "type": "object",
            "properties": {
                "git": {
                    "type": "string",
                    "pattern": ".git$|[^/]$"
                },
                "hash": {
                    "type": "string",
                    "pattern": "[0-9a-f]{40}"
                }
            },
            "required": [
                "git"
            ]
        }
    }
}